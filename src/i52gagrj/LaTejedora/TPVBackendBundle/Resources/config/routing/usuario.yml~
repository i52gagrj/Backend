usuario:
    path:     /
    defaults: { _controller: "i52LTPVFrontendBundle:Usuario:index" }

usuario_show:
    path:     /{id}/show
    defaults: { _controller: "i52LTPVFrontendBundle:Usuario:show" }

usuario_new:
    path:     /new
    defaults: { _controller: "i52LTPVFrontendBundle:Usuario:new" }

usuario_create:
    path:     /create
    defaults: { _controller: "i52LTPVFrontendBundle:Usuario:create" }
    methods:  POST

usuario_edit:
    path:     /{id}/edit
    defaults: { _controller: "i52LTPVFrontendBundle:Usuario:edit" }

usuario_update:
    path:     /{id}/update
    defaults: { _controller: "i52LTPVFrontendBundle:Usuario:update" }
    methods:  [POST, PUT]

usuario_delete:
    path:     /{id}/delete
    defaults: { _controller: "i52LTPVFrontendBundle:Usuario:delete" }
    methods:  [POST, DELETE]

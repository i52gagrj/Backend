{% extends '::base.html.twig' %}

{% block contenido %}
<div class="contenido"> 
    <h3>Lista de Socios</h3>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre del socio</th>
                <th>Direccion</th>
                <th>Poblacion</th>
                <th>CP</th>
                <th>Provincia</th>
                <th>DNI</th>
                <th>Email</th>
                <th>Telefono fijo</th>
                <th>Telefono movil</th>
                <th>Saldo</th>
                <th>Activo</th>
                <th>Fecha de baja</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('socio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.poblacion }}</td>
                <td>{{ entity.cp }}</td>
                <td>{{ entity.provincia }}</td>
                <td>{{ entity.dni }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefijo }}</td>
                <td>{{ entity.telemovil }}</td>
                <td>{{ entity.saldo }}</td>
                <td>{% if entity.activo %} Si {% else %} No {% endif %}</td>
                <td>{% if entity.activo == false %}{% if entity.fechainactivo %}{{ entity.fechainactivo|date('Y-m-d') }}{% endif %}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('socio_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('socio_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


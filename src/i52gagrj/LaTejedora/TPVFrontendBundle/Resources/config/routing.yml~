api_login_check:
   path: /datos/login_check

login_route:
    path: /login
    defaults: { _controller: i52LTPVFrontendBundle:Security:login }

login_check:
    path: /login_check
    # no controller is bound to this route
    # as it's handled by the Security system

logout:
    path: /logout

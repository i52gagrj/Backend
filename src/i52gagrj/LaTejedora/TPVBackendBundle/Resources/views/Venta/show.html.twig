{% extends '::base.html.twig' %}

{% block contenido %}
<div class="contenido">
    <h3>Venta</h3>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fecha de venta</th>
                <td>{{ entity.fechaventa|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Hora de venta</th>
                <td>{{ entity.horaventa|date('H:i:s') }}</td>
            </tr>
            <tr>
                <th>Contado</th>
                <td>{{ entity.contado }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('venta') }}">
            Volver al listado
        </a>
    </li>
</ul>
</div>
{% endblock %}
